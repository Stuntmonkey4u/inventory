<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Report</title>
    <style>
        :root {
            --bg-color-dark: #1a1a1a; /* Slightly less intense black */
            --text-color-dark: #e0e0e0;
            --header-text-color-dark: #ffffff; /* Brighter for main headers */
            --section-bg-dark: #2c2c2c; /* Darker gray for sections */
            --border-color-dark: #444444;
            --table-header-bg-dark: #383838;
            --summary-bg-dark: #333; /* Slightly different for summary */
            --pre-bg-dark: #222222; /* Darker than section for contrast */
            --pre-text-dark: #d0d0d0;
            --link-color-dark: #68a0cf; /* Light blue for links */
            --button-bg-dark: #383838;
            --button-text-dark: #e0e0e0;
            --shadow-color-dark: rgba(0,0,0,0.5);

            --bg-color-light: #f4f4f4;
            --text-color-light: #333333;
            --header-text-color-light: #000000;
            --section-bg-light: #ffffff;
            --border-color-light: #dddddd;
            --table-header-bg-light: #e9e9e9;
            --summary-bg-light: #e0e0e0; /* Slightly different for summary */
            --pre-bg-light: #eeeeee;
            --pre-text-light: #333333;
            --link-color-light: #007bff;
            --button-bg-light: #e0e0e0;
            --button-text-light: #333333;
            --shadow-color-light: rgba(0,0,0,0.1);

            /* Default to dark theme */
            --current-bg-color: var(--bg-color-dark);
            --current-text-color: var(--text-color-dark);
            --current-header-text-color: var(--header-text-color-dark);
            --current-section-bg: var(--section-bg-dark);
            --current-border-color: var(--border-color-dark);
            --current-table-header-bg: var(--table-header-bg-dark);
            --current-summary-bg: var(--summary-bg-dark);
            --current-pre-bg: var(--pre-bg-dark);
            --current-pre-text: var(--pre-text-dark);
            --current-link-color: var(--link-color-dark);
            --current-button-bg: var(--button-bg-dark);
            --current-button-text: var(--button-text-dark);
            --current-shadow-color: var(--shadow-color-dark);
        }

        body.light-theme {
            --current-bg-color: var(--bg-color-light);
            --current-text-color: var(--text-color-light);
            --current-header-text-color: var(--header-text-color-light);
            --current-section-bg: var(--section-bg-light);
            --current-border-color: var(--border-color-light);
            --current-table-header-bg: var(--table-header-bg-light);
            --current-summary-bg: var(--summary-bg-light);
            --current-pre-bg: var(--pre-bg-light);
            --current-pre-text: var(--pre-text-light);
            --current-link-color: var(--link-color-light);
            --current-button-bg: var(--button-bg-light);
            --current-button-text: var(--button-text-light);
            --current-shadow-color: var(--shadow-color-light);
        }

        body {
            font-family: sans-serif;
            margin: 20px;
            background-color: var(--current-bg-color);
            color: var(--current-text-color);
            line-height: 1.6;
        }

        h1, h2 { /* Removed h3 as it's now in summary */
            color: var(--current-header-text-color);
        }
        h2.host-title {
             color: var(--current-header-text-color);
             border-bottom: 1px solid var(--current-border-color);
             padding-bottom: 5px;
        }

        .report-section {
            background-color: var(--current-section-bg);
            margin-bottom: 20px;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px var(--current-shadow-color);
            border: 1px solid var(--current-border-color);
        }

        .host-details {
            margin-bottom: 15px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            text-align: left;
            padding: 10px;
            border-bottom: 1px solid var(--current-border-color);
        }

        th {
            background-color: var(--current-table-header-bg);
            color: var(--current-header-text-color);
        }

        pre {
            background-color: var(--current-pre-bg);
            color: var(--current-pre-text);
            padding: 15px;
            border-radius: 4px;
            white-space: pre-wrap;
            word-wrap: break-word;
            border: 1px solid var(--current-border-color);
            margin-top: 10px; /* Ensure pre has margin if it's direct child */
        }

        a {
            color: var(--current-link-color);
        }

        strong {
            color: var(--current-header-text-color);
        }

        #theme-toggle {
            background-color: var(--current-button-bg);
            color: var(--current-button-text);
            border: 1px solid var(--current-border-color);
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }
        #theme-toggle:hover {
            opacity: 0.8;
        }

        /* Styles for details and summary */
        details {
            margin-bottom: 15px; /* Space between collapsible sections */
            padding: 0; /* Reset padding as content will have its own */
            border: 1px solid var(--current-border-color);
            border-radius: 5px;
            background-color: var(--current-section-bg); /* Match section or slightly different */
        }

        details[open] {
             padding-bottom: 10px; /* Add padding when open for content below summary */
        }

        summary {
            cursor: pointer;
            padding: 12px 15px; /* Increased padding */
            background-color: var(--current-summary-bg);
            color: var(--current-header-text-color);
            font-weight: bold; /* Make summary text bold like h3 */
            border-radius: 4px; /* Slightly rounded corners for summary */
            margin-bottom: 0; /* Remove default margin */
            outline: none;
        }

        summary:hover, summary:focus {
            opacity: 0.9;
        }

        details[open] summary {
            border-bottom: 1px solid var(--current-border-color);
            border-bottom-left-radius: 0; /* Sharpen corners when open */
            border-bottom-right-radius: 0;
            margin-bottom: 10px; /* Space between summary and its content when open */
        }

        /* Content inside details (tables, pre, p) should have top margin */
        details > table,
        details > pre,
        details > p,
        details > ul { /* Assuming ul might be used in future */
            margin-top: 0; /* Reset default if any */
            padding-left: 15px; /* Indent content slightly */
            padding-right: 15px;
        }
        details > p { /* For "No data" messages */
             color: var(--current-text-color); /* Ensure it uses the right text color */
        }

        /* Styling for nested details */
        details.nested-details {
            margin-left: 25px; /* Indent nested details block */
            margin-top: 10px;  /* Space from the table above or parent summary */
            border-left: 2px solid var(--current-link-color); /* Accent border */
            background-color: var(--current-bg-color); /* Slightly different background from parent details */
        }
        details.nested-details summary {
            font-size: 0.9em; /* Smaller font for nested summary */
            background-color: var(--current-section-bg); /* Less prominent background, like a sub-header */
            padding: 8px 15px; /* Adjust padding for smaller summary */
        }
        details.nested-details[open] summary {
            margin-bottom: 8px; /* Adjust space for nested content */
        }
        details.nested-details > table {
            margin-top: 5px; /* Space between nested summary and its table */
        }

        .sortable-header {
            cursor: pointer;
            user-select: none; /* Optional: prevent text selection on click */
        }
        .sortable-header:hover {
            background-color: var(--current-summary-bg); /* Using summary background for hover */
        }
        .sort-asc::after { content: " \25B2"; } /* Up arrow Unicode character */
        .sort-desc::after { content: " \25BC"; } /* Down arrow Unicode character */

    </style>
</head>
<body>
    <button id="theme-toggle">Toggle Theme</button>
    <h1>Network Inventory Report - {{ ansible_date_time.date }}</h1>

    <div class="report-section">
        <h2>Report Summary</h2>
        <p><strong>Report Generated:</strong> {{ ansible_date_time.iso8601 }}</p>
        <p><strong>Total Hosts Processed:</strong> {{ report_data.items() | length }}</p>
    </div>

    {% for host, details in report_data.items() %}
    <div class="report-section">
        <h2 class="host-title">Host: {{ host }}</h2>
        <div class="host-details">
            <p><strong>Hostname:</strong> {{ details.hostname }}</p>
            <p><strong>IP Address:</strong> {{ details.ip }}</p>
            <p><strong>Operating System:</strong> {{ details.os }}</p>
            <p><strong>Uptime:</strong> {{ details.uptime }}</p>
            <p><strong>Boot Time:</strong>
                {% if not details.system_info_collected %}
                    Skipped by user.
                {% elif details.boot_time == "Skipped" or not details.boot_time %}
                    N/A
                {% else %}
                    {{ details.boot_time }}
                {% endif %}
            </p>
        </div>

        <details>
            <summary>Verified Running Services</summary>
            {% if not details.services_collected %}
                <p>Data collection for this section was skipped by the user.</p>
            {% elif details.verified_services == "Skipped" or not details.verified_services or (details.verified_services is sequence and details.verified_services | length == 0) %}
                <p>No running services found or data not available for this host.</p>
            {% else %}
                <input type="text" class="table-filter" placeholder="Filter verified services..." style="margin-bottom: 10px; padding: 8px; border-radius: 4px; border: 1px solid var(--current-border-color); background-color: var(--current-section-bg); color: var(--current-text-color); width: 100%; box-sizing: border-box;">
                {% set services_list = details.verified_services %}
                {% set total_services = services_list | length %}
                <table>
                    <thead>
                        <tr><th class="sortable-header">Service</th></tr>
                    </thead>
                    <tbody>
                    {% for item in services_list[:20] %} {# Display top 20 #}
                        <tr><td>{{ item }}</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% if total_services > 20 %}
                    <details class="nested-details">
                        <summary>Show {{ total_services - 20 }} more services...</summary>
                        <table>
                            <thead>
                                <tr><th class="sortable-header">Service</th></tr>
                            </thead>
                            <tbody>
                            {% for item in services_list[20:] %} {# Display remaining #}
                                <tr><td>{{ item }}</td></tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </details>
                {% endif %}
            {% endif %}
        </details>

        <details>
            <summary>All Services</summary>
            {% if not details.services_collected %}
                <p>Data collection for this section was skipped by the user.</p>
            {% elif details.all_services == "Skipped" or not details.all_services or (details.all_services is sequence and details.all_services | length == 0) %}
                <p>No service data available for this host.</p>
            {% else %}
                <input type="text" class="table-filter" placeholder="Filter all services..." style="margin-bottom: 10px; padding: 8px; border-radius: 4px; border: 1px solid var(--current-border-color); background-color: var(--current-section-bg); color: var(--current-text-color); width: 100%; box-sizing: border-box;">
                <table>
                    <thead>
                        <tr>
                            <th class="sortable-header">Service</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in details.all_services %}
                        <tr>
                            <td>{{ item }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </details>

        <details>
            <summary>Installed Packages</summary>
            {% if not details.packages_collected %}
                <p>Data collection for this section was skipped by the user.</p>
            {% elif details.packages == "Skipped" or not details.packages or (details.packages is sequence and details.packages | length == 0) %}
                <p>No package data available for this host.</p>
            {% else %}
                <input type="text" class="table-filter" placeholder="Filter packages..." style="margin-bottom: 10px; padding: 8px; border-radius: 4px; border: 1px solid var(--current-border-color); background-color: var(--current-section-bg); color: var(--current-text-color); width: 100%; box-sizing: border-box;">
                <table>
                    <thead>
                        <tr>
                            <th class="sortable-header">Package Name</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in details.packages %}
                        <tr>
                            <td>{{ item }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </details>

        <details>
            <summary>Upgradable Packages</summary>
            {% if not details.packages_collected %}
                <p>Data collection for this section was skipped by the user.</p>
            {% elif details.upgradable_packages == "Skipped" or not details.upgradable_packages or (details.upgradable_packages is sequence and details.upgradable_packages | length == 0) %}
                <p>No upgradable packages found or data not available for this host.</p>
            {% else %}
                <input type="text" class="table-filter" placeholder="Filter upgradable packages..." style="margin-bottom: 10px; padding: 8px; border-radius: 4px; border: 1px solid var(--current-border-color); background-color: var(--current-section-bg); color: var(--current-text-color); width: 100%; box-sizing: border-box;">
                <table>
                    <thead>
                        <tr>
                            <th class="sortable-header">Package Name</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in details.upgradable_packages %}
                        <tr>
                            <td>{{ item }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </details>

        <details>
            <summary>Docker Containers</summary>
            {% if not details.docker_collected %}
                <p>Data collection for this section was skipped by the user.</p>
            {% elif details.docker == "Skipped" or not details.docker or (details.docker is sequence and details.docker | length == 0) %}
                <p>No Docker containers found, Docker not installed, or data not available for this host.</p>
            {% else %}
                <input type="text" class="table-filter" placeholder="Filter containers..." style="margin-bottom: 10px; padding: 8px; border-radius: 4px; border: 1px solid var(--current-border-color); background-color: var(--current-section-bg); color: var(--current-text-color); width: 100%; box-sizing: border-box;">
                <table>
                    <thead>
                        <tr>
                            <th class="sortable-header">Container Name: Image</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in details.docker %}
                        <tr>
                            <td>{{ item }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </details>

        <details>
            <summary>Listening Ports</summary>
            {% if not details.network_collected %}
                <p>Data collection for this section was skipped by the user.</p>
            {% elif details.listening_ports == "Skipped" or not details.listening_ports or (details.listening_ports is sequence and details.listening_ports | length == 0) %}
                <p>No listening port data available for this host.</p>
            {% else %}
                <pre>{{ details.listening_ports | join('\n') }}</pre>
            {% endif %}
        </details>

        <details>
            <summary>Firewall Rules</summary>
            {% if not details.network_collected %}
                <p>Data collection for this section was skipped by the user.</p>
            {% elif details.firewall_rules == "Skipped" or not details.firewall_rules or (details.firewall_rules is sequence and details.firewall_rules | length == 0) %}
                <p>No firewall rule data available for this host.</p>
            {% else %}
                <pre>{{ details.firewall_rules | join('\n') }}</pre>
            {% endif %}
        </details>

        <details>
            <summary>Login History</summary>
            {% if not details.user_logs_collected %}
                <p>Data collection for this section was skipped by the user.</p>
            {% elif details.login_history == "Skipped" or not details.login_history or (details.login_history is sequence and details.login_history | length == 0) %}
                <p>No login history data available for this host.</p>
            {% else %}
                <pre>{{ details.login_history | join('\n') }}</pre>
            {% endif %}
        </details>

        <details>
            <summary>Root Cron Jobs</summary>
            {% if not details.user_logs_collected %}
                <p>Data collection for this section was skipped by the user.</p>
            {% elif details.cron_jobs == "Skipped" or not details.cron_jobs or (details.cron_jobs is sequence and details.cron_jobs | length == 0) %}
                <p>No root cron jobs found or data not available for this host.</p>
            {% else %}
                <pre>{{ details.cron_jobs | join('\n') }}</pre>
            {% endif %}
        </details>

        <details>
            <summary>Filesystem Usage</summary>
            {% if not details.system_info_collected %}
                <p>Data collection for this section was skipped by the user.</p>
            {% elif details.filesystem == "Skipped" or not details.filesystem or (details.filesystem is sequence and details.filesystem | length == 0) %}
                <p>No filesystem usage data available for this host.</p>
            {% else %}
                <pre>{{ details.filesystem | join('\n') }}</pre>
            {% endif %}
        </details>
    </div>
    {% else %}
    <p>No hosts found in the report.</p>
    {% endfor %}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const themeToggle = document.getElementById('theme-toggle');
            const body = document.body;
            const currentTheme = localStorage.getItem('theme');

            // Apply saved theme on load
            if (currentTheme === 'light') {
                body.classList.add('light-theme');
                themeToggle.textContent = 'Switch to Dark Mode'; // Update button text
            } else {
                body.classList.remove('light-theme'); // Default to dark
                themeToggle.textContent = 'Switch to Light Mode'; // Update button text
            }

            themeToggle.addEventListener('click', function () {
                body.classList.toggle('light-theme');
                if (body.classList.contains('light-theme')) {
                    localStorage.setItem('theme', 'light');
                    themeToggle.textContent = 'Switch to Dark Mode';
                } else {
                    localStorage.setItem('theme', 'dark');
                    themeToggle.textContent = 'Switch to Light Mode';
                }
            });

            const filterInputs = document.querySelectorAll('.table-filter');
            filterInputs.forEach(input => {
                const parentDetails = input.closest('details'); // Assumes input is within a <details> that also contains the table(s)
                if (parentDetails) {
                    const tablesToFilter = parentDetails.querySelectorAll('table'); // Gets all tables within this <details>
                    if (tablesToFilter.length > 0) {
                        input.addEventListener('keyup', function() {
                            const filterText = input.value.toLowerCase();
                            tablesToFilter.forEach(tableElement => {
                                const tbody = tableElement.getElementsByTagName('tbody')[0];
                                if (!tbody) { // Skip if table has no tbody
                                    return;
                                }
                                const rows = tbody.getElementsByTagName('tr');
                                for (let i = 0; i < rows.length; i++) {
                                    const row = rows[i];
                                    const cells = row.getElementsByTagName('td');
                                    // Skip rows without TD elements
                                    if (cells.length === 0) {
                                        continue;
                                    }
                                    let rowText = '';
                                    for (let j = 0; j < cells.length; j++) {
                                        rowText += (cells[j].textContent || cells[j].innerText).toLowerCase();
                                    }

                                    if (rowText.indexOf(filterText) > -1) {
                                        row.style.display = '';
                                    } else {
                                        row.style.display = 'none';
                                    }
                                }
                            });
                        });
                    }
                }
            });

            function sortTableByColumn(table, column, asc = true) {
                const dirModifier = asc ? 1 : -1;
                const tbody = table.tBodies[0];
                if (!tbody) return; // Exit if no tbody
                const rows = Array.from(tbody.querySelectorAll("tr"));

                const sortedRows = rows.sort((a, b) => {
                    const aTd = a.querySelector(`td:nth-child(${column + 1})`);
                    const bTd = b.querySelector(`td:nth-child(${column + 1})`);

                    const aColText = aTd ? (aTd.textContent || aTd.innerText || '').trim().toLowerCase() : '';
                    const bColText = bTd ? (bTd.textContent || bTd.innerText || '').trim().toLowerCase() : '';

                    const aNum = parseFloat(aColText);
                    const bNum = parseFloat(bColText);

                    if (!isNaN(aNum) && !isNaN(bNum)) {
                        return (aNum - bNum) * dirModifier;
                    } else {
                        return aColText.localeCompare(bColText) * dirModifier;
                    }
                });

                while (tbody.firstChild) {
                    tbody.removeChild(tbody.firstChild);
                }
                tbody.append(...sortedRows);

                // Update header sort indicators
                table.querySelectorAll("th.sortable-header").forEach(th => {
                    th.classList.remove("sort-asc", "sort-desc");
                    if (th.cellIndex === column) { // cellIndex is the property for column index
                        th.classList.toggle("sort-asc", asc);
                        th.classList.toggle("sort-desc", !asc);
                    }
                });
            }

            document.querySelectorAll("th.sortable-header").forEach(headerCell => {
                headerCell.addEventListener("click", () => {
                    const tableElement = headerCell.closest("table");
                    if (!tableElement) return; // Exit if no table found
                    const headerIndex = headerCell.cellIndex; // More direct way to get column index

                    let sortAscending = true; // Default: first click sorts ascending
                    if (headerCell.classList.contains("sort-asc")) {
                        // If current is ascending, next sort will be descending
                        sortAscending = false;
                    } else if (headerCell.classList.contains("sort-desc")) {
                        // If current is descending, next sort will be ascending
                        sortAscending = true;
                    }
                    // If no sort class is present (first click on this header), it will sort ascending as per default.

                    sortTableByColumn(tableElement, headerIndex, sortAscending);
                });
            });
        });
    </script>
</body>
</html>
